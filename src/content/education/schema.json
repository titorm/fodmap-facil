{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Educational Content Schema",
    "description": "JSON schema for validating educational content items in the FODMAP washout period feature",
    "type": "object",
    "required": [
        "id",
        "title",
        "summary",
        "content",
        "category",
        "tags",
        "difficultyLevel",
        "targetAnxietyLevels",
        "potentiallyStressful",
        "estimatedReadTimeMinutes",
        "createdAt",
        "updatedAt"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the content",
            "minLength": 1
        },
        "title": {
            "type": "string",
            "description": "Title of the content",
            "minLength": 1,
            "maxLength": 100
        },
        "summary": {
            "type": "string",
            "description": "Brief summary of the content",
            "minLength": 1,
            "maxLength": 200
        },
        "content": {
            "type": "string",
            "description": "Full content in Markdown format",
            "minLength": 1
        },
        "category": {
            "type": "string",
            "description": "Category classification",
            "enum": [
                "social-tips",
                "recipes",
                "fodmap-guidance",
                "anxiety-support"
            ]
        },
        "tags": {
            "type": "array",
            "description": "Tags for content filtering and search",
            "items": {
                "type": "string",
                "minLength": 1
            },
            "minItems": 0
        },
        "difficultyLevel": {
            "type": "string",
            "description": "Difficulty level for experience-based filtering",
            "enum": [
                "beginner",
                "intermediate",
                "advanced"
            ]
        },
        "targetAnxietyLevels": {
            "type": "array",
            "description": "Target anxiety levels this content is appropriate for",
            "items": {
                "type": "string",
                "enum": [
                    "low",
                    "medium",
                    "high"
                ]
            },
            "minItems": 1
        },
        "potentiallyStressful": {
            "type": "boolean",
            "description": "Flag indicating if content might be stressful for anxious users"
        },
        "estimatedReadTimeMinutes": {
            "type": "integer",
            "description": "Estimated reading time in minutes",
            "minimum": 1
        },
        "createdAt": {
            "type": "string",
            "description": "ISO 8601 timestamp of content creation",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "description": "ISO 8601 timestamp of last update",
            "format": "date-time"
        },
        "author": {
            "type": "string",
            "description": "Optional author name"
        },
        "imageUrl": {
            "type": "string",
            "description": "Optional image URL",
            "format": "uri"
        }
    },
    "additionalProperties": false
}